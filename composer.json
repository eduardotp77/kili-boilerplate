{
  "name": "kwb",
  "type": "project",
  "description": "A modern WordPress development environment",
  "homepage": "https://github.com/fabolivar/wordpress-boilerplate",
  "authors": [
    {
      "name": "Fabian Altahona",
      "email": "fabolivar@gmail.com",
      "homepage": "https://github.com/fabolivar"
    }
  ],
  "keywords": [
    "kwb", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/fabolivar/wordpress-boilerplate/issues"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "~1.2.0",
    "vlucas/phpdotenv": "^2.4.0",
    "johnpbloch/wordpress": "4.9.5",
    "oscarotero/env": "^1.1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0.2"
  },
  "extra": {
    "installer-paths": {
      "app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "app/plugins/{$name}/": ["type:wordpress-plugin"],
      "app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "vendor/bin/phpcs"
    ]
  }
}
